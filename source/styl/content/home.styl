header
    background-color #75BC97
    article#desktop
        display flex
        img
            overflow-x auto
        h1,
        h2,
        .svg
            position absolute
            color white
            left 20%
        h2 
            top 5%
            font-weight initial
            font-size 2vw
        h1
            top 10%
            font-size 4vw
        .logo.svg
            top 4.5vw
            width 11vw
        .arrow.svg
            top 25vw
            width 2.5vw


section#find-your-friend
    .container
        .row
            justify-content space-between
    .sunlight,
    .water,
    .chew
        display flex
        flex-direction column
        align-items flex-start
        row-gap 20px
    .water
        img
            transform scaleX(-1)
    img
        height 5vw
    h3
        color #848484
        font-size 1vw
        font-weight lighter
        margin 0
    select,
    option
        color #a8a8a8
        text-transform capitalize
    select
        border 1px solid #a8a8a8
        padding 0.5vw 9vw 0.5vw 0.5vw
        border-radius 50px
        font-size 0.7vw


section#no-results-yet
    background-color #f2f2f2
    transition all .3s linear
    opacity 1
    .container
        display flex
        justify-content space-evenly
        align-items center
        .row
            img
                width 6vw
    .text.row
        display block
    h3,
    h4
        color #a9a9a9
        margin 0
        text-align left
    h3
        font-size 2vw
    h4
        font-size 1vw
        font-weight lighter


section#picks-for-you
    display none
    background-color #f2f2f2
    transition all .3s linear
    opacity 0
    .row
        flex-direction column
        flex-wrap nowrap
        align-items flex-start
        button
            width 100%
            color #15573F
            border 1px solid #15573F
            border-radius 30px
            display flex
            justify-content center
            align-items center
            transition 0.3s
            margin 1.5vw 0
            svg
                width .8vw
                padding .5vw
                transition 0.1s
            h4
                font-weight lighter
                font-family "Montserrat", sans-serif !important
                margin 1vw 0
        button:hover
            background-color #15573F
            color white
            cursor pointer
            opacity 1
            g
                stroke white
                transition 0.1s
    img
        width 10vw
    h3
        font-size 2.5vw
        margin 1vw 0
    .row.boxes
        display grid
        grid-template-columns repeat(4, 25%)
        .box
            background-color #fff
            display none
            flex-direction column
            align-items center
            justify-content space-between
            padding 1vw 1.5vw
            width 10vw
            height 12vw
            margin 0 1.6vw 1.6vw 0
            .staff-favorite
                display none
            img
                height 8vw
                width auto
            h4
                color #1E6B4E
                font-size 1vw
                margin 0 auto 0 0
            .name-info
                display flex
                flex-direction column
                width 100%
                row-gap .3vw
            .info
                display flex
                width 100%
                justify-content space-between
                align-items center
                h5
                    color #1E6B4E
                    margin 0
                    font-size .85vw
                .care-info
                    img
                        height 1vw
                        width auto
                        padding 0 .15vw
        .carousel-button-next,
        .carousel-button-prev
            display none
        .box-staff
            display none
            grid-column-start 1
            grid-column-end 3
            grid-row-start 1
            grid-row-end 3
            width 25vw
            height 27.7vw
            justify-content flex-end
            .staff-favorite
                display flex
                background-color #75bc97
                height 2.5vw
                width 10vw
                border-radius 0 30px 30px 0
                justify-content flex-start
                margin 0 auto 2vw -1.6vw
                box-shadow 3px 3px 10px #a9a9a9
                p
                    color white
                    font-weight bolder
                    padding .7vw 0 .7vw 1vw
                    height auto
                    margin 0
                    font-size .8vw
            img
                height 17vw
            h4
                font-size 1.7vw
            .name-info
                display flex
                flex-direction row
                .info
                    display flex
                    flex-direction column
                    align-items flex-end    
                    h5
                        font-size 1.2vw
                    .care-info
                        img
                            height 1.5vw
                            padding 1vw 0.2vw  


section#error
    display none
    background-color #f2f2f2
    transition all .3s linear
    opacity 1
    .container
        display flex
        justify-content space-evenly
        align-items center
        .row
            img
                width 6vw
    .text.row
        display block
    h3,
    h4
        color #a9a9a9
        margin 0
        text-align left
    h3
        font-size 2vw
    h4
        font-size 1vw
        font-weight lighter